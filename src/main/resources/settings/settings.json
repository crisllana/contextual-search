{
  "index": {
    "number_of_shards": 1,
    "number_of_replicas": 2,
    "max_ngram_diff": 10
  },
  "analysis": {
    "analyzer": {
      "suggestion_analyzer": {
        "type": "custom",
        "tokenizer": "suggestion_tokenizer",
        "filter": "lowercase"
      },
      "suggestion_search_analyzer": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": "lowercase"
      }
    },
    "tokenizer": {
      "suggestion_tokenizer": {
        "type": "edge_ngram",
        "min_gram": 1,
        "max_gram": 10,
        "token_chars": [
          "letter",
          "digit"
        ]
      }
    }
  }
}